@model IEnumerable<ExpenseTrackerWeb.DataObjects.Expense>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                Type
            </th>
            <th>
              Reimbursable Type
            </th>
            <th>
                Amount
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                Payment Method
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>                                         
                @Html.DisplayNameFor(model => model.UploadedImage)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>     

            <td>
                @Html.DisplayFor(modelItem => item.SubCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>                       
                @{
                    if (item.UploadedImage != null)
                    {
                        var base64 = Convert.ToBase64String(item.UploadedImage);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        item.UploadedImage = new byte[1];
                        <img src="@imgSrc" width="80" height="80" />
                    }
                }

                
                
               
            </td>
            @*<td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>*@
        </tr>
    }
    
    </table>
</body>
</html>
